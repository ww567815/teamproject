<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team.mapper.ProductMapper">

	<insert id="insert">
	<![CDATA[
		INSERT INTO products (pnum, productName, title, status, sell_price, description, seller_id)
		VALUES (#{pnum}, #{productName}, #{title}, #{status}, #{sell_price}, #{description}, #{seller_id})
	]]>
	</insert>
	
	<delete id="deleteAll">
	<![CDATA[
		DELETE FROM products
	]]>
	</delete>

	<select id="nextNum" resultType="int">
	<![CDATA[
		SELECT IFNULL(MAX(pnum), 0) + 1 AS pnum FROM products
	]]>
	</select>

	<select id="getProducts" resultType="ProductVO">
	<![CDATA[
		SELECT * 
		FROM products
		ORDER BY pnum DESC
		
		 
	]]>
	</select>
	
	
   <select id="getProductsWithPaging" resultType="ProductVO">
   <![CDATA[
      SELECT * 
      FROM products
   ]]>
      <where>
         <if test="type == 'T'.toString()">
            title LIKE CONCAT('%', #{keyword}, '%') 
         </if>
         <if test="type == 'C'.toString()">
            description LIKE CONCAT('%', #{keyword}, '%') 
         </if>
         <if test="type == 'W'.toString()">
            seller_id LIKE CONCAT('%', #{keyword}, '%') 
         </if>
      </where>
   <![CDATA[
      ORDER BY pnum DESC
      LIMIT #{startRow }, #{amount}
      ]]>
   </select>

	<select id="getTotalCount" resultType="int">
	<![CDATA[
		SELECT COUNT(*)
		FROM products
	]]>
	</select>
	
	<select id="getProductAndAttaches" resultMap="productAndAttaches">
	<![CDATA[
SELECT p.pnum, p.productName, p.title, p.status, p.sell_price, p.description, p.seller_id, a.uuid, a.uploadpath, a.filename, a.filetype, a.bno 
FROM products p LEFT OUTER JOIN attach a ON p.pnum = a.bno WHERE pnum = #{pnum};
	]]>
	</select>
	<resultMap type="productVO" id="productAndAttaches">
		<id column="pnum" property="pnum"/>
		<result column="productName" property="productName"/>
		<result column="title" property="title"/>
		<result column="status" property="status"/>
		<result column="sell_price" property="sell_price"/>
		<result column="description" property="description"/>
		<result column="seller_id" property="seller_id"/>

		<collection property="attachList" javaType="list" ofType="attachVO">
			<id column="uuid" property="uuid"/>
			<result column="uploadpath" property="uploadpath"/>
			<result column="filename" property="filename"/>
			<result column="filetype" property="filetype"/>
			<result column="bno" property="bno"/>
		</collection>
	</resultMap>
	
	      <select id="getTotalCountBySearch" resultType="int">
   <![CDATA[
      SELECT COUNT(*)
      FROM products
   ]]>
      <where>
         <if test="type == 'T'.toString()">
            title LIKE CONCAT('%', #{keyword}, '%') 
         </if>
         <if test="type == 'C'.toString()">
            description LIKE CONCAT('%', #{keyword}, '%') 
         </if>
         <if test="type == 'W'.toString()">
            seller_id LIKE CONCAT('%', #{keyword}, '%') 
         </if>
      </where>
   </select>

</mapper>